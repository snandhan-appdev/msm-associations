<h1>
  Actor #<%= @actor.id %> details
</h1>

<a href="/actors/<%= @actor.id %>/edit">
  Edit actor
</a>

<hr>

<dl>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image url
  </dt>
  <dd>
    <img src="<%= @actor.image_url %>" width="320">
  </dd>

  <dt>
    Number of characters
  </dt>
  <dd>
    <%= Character.where(actor_id: @actor.id).count %>
  </dd>

</dl>

<a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger">
  Delete actor
</a>

<hr>

<a href="/actors">
  Go back
</a>









<div class="card mt-4">
  <div class="card-header">
    Filmography
  </div>
  <ul class="list-group list-group-flush">
    
    <% Character.where(actor_id: @actor.id).each do |character| %>
      <li class="list-group-item">
        <a href="/movies/<%= character.movie.id %>"> 
          <%= character.movie.title %>
        </a>
        (<%= character.name %>)
      </li>
   <% end %>
  </ul>
  
  <div class="card-header">
  Add a new character for this actor
  </div>
  <ul class ="list-group">
    <li class="list-group-item">
       <form action="/create_character" method="post">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <!-- Label and input for movie -->
  <div class="form-group">
    <label for="movie">
      Movie
    </label>

 <%= select_tag("movie_id", options_from_collection_for_select(Movie.all, :id, :title, @character.try(:actor_id)), :class => "form-control") %>
    or <a href="/actors/new">Add a new movie</a> first  </div>

  <input type="hidden" name="actor_id" value="<%= @actor.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create character
  </button>
</form>
      
    </li>

    
    
  </ul>
</div>
  
  
  
</div>