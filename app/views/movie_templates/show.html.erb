<h1>
  Movie #<%= @movie.id %> details
</h1>

<a href="/movies/<%= @movie.id %>/edit">
  Edit movie
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @movie.description %>
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <a href="/directors/ <%= @movie.director_id %>">
        <%= Director.find(@movie.director_id).name %>
      </a>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @movie.image_url %>" width="320">
  </dd>

  <dt>
    Number of characters
  </dt>
  <dd>
    <%= Character.where(movie_id: @movie.id).count %>
  </dd>

</dl>

<a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger">
  Delete movie
</a>

<hr>

<a href="/movies">
  Go back
</a>

<div class="card mt-4">
  <div class="card-header">
    Cast
  </div>
  <ul class="list-group list-group-flush">
    
    <% Character.where(movie_id: @movie.id).each do |character| %>
      <li class="list-group-item">
        <a href="/actors/<%= character.actor_id %>"> 
          <%= Actor.find(character.actor_id).name %>
        </a>
        (<%= character.name %>)
      </li>
   <% end %>
  </ul>
  
  <div class="card-header">
  Add a new character for this movie
  </div>
  <ul class ="list-group">
    <li class="list-group-item">
       <form action="/create_character" method="post" >
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <div class="form-group">
    <label for="actor_id">
      Actor
    </label>

 <%= select_tag("actor_id", options_from_collection_for_select(Actor.all, :id, :name, @character.try(:actor_id)), :class => "form-control") %>
    or <a href="/actors/new">Add a new actor</a> first

  </div>

  <input type="hidden" name="movie_id" value="<%= @movie.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create character
  </button>
</form>
      
    </li>

    
    
  </ul>
</div>
  
  
  
</div>
